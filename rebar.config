{erl_opts,
 [warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  debug_info]}.

{minimum_otp_vsn, "21"}.

{deps, [{rebar3_format, "~> 1.0.0"}]}.

{project_plugins,
 [{rebar3_hex, "~> 6.11.0"},
  {rebar3_format, "~> 1.0.0"},
  {rebar3_lint, "~> 0.5.0"},
  {rebar3_hank, "~> 1.1.0"}]}.

{dialyzer, [{warnings, [no_return, unmatched_returns, error_handling, underspecs]}]}.

{edoc_opts, [{todo, true}, {overview, "priv/overview.edoc"}]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{alias, [{test, [compile, format, lint, dialyzer, {ct, "--verbose"}, cover, edoc]}]}.

{format,
 [{files,
   ["*.config", "src/**/*.app.src", "src/**/*.?rl", "test/**/*.?rl", "include/*.hrl"]}]}.
